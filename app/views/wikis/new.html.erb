<%= form_for @wiki do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <% if current_user.admin? || current_user.premium? %>
    <div class="form-group">
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box(:private, checked: @wiki.private)  %> Private Wiki
      <% end %>
    </div>

  <% end %>

  <%= f.submit "Save" %>
<% end %>
