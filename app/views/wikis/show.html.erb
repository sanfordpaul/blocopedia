<div class="grid-x">
  <div class="small-12 medium-10 small-centered cell text-center">
    <h2><%= @wiki.title %></h2>
    <div class="callout text-left">
      <h3>
        <%= @wiki.body %>
      </h3>
      <h6 class="subheader">
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
        <% unless @wiki.created_at == @wiki.updated_at %>
          -- updated <%= time_ago_in_words(@wiki.updated_at) %> ago
        <% end %>
      </h6>
    </div>
  </div>
</div>

<div class="grid-x">
  <div class="shrink small-centered cell">
    <%= link_to "Edit Wiki", edit_wiki_path, class: 'success button' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'danger button', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
  </div>
</div>
